{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "public/*.js"
      ],
      "env": [
        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_APP_EMAILDOMAIN",
        "COSMOSDB_CONNECTION_STRING",
        "OPENAI_API_KEY",
        "ACS_CONNECTION_STRING",
        "WP_JWT_SIGN_SECRET",
        "STRIPE_SECRETKEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE",
        "STRIPE_WEBHOOK_SECRET"
      ]
    }
  }
}
