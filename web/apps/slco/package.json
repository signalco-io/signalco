        "eslint": "8.56.0",
        "next-sitemap": "4.2.3",
        "postcss": "8.4.32",
        "rimraf": "5.0.5",
        "sass": "1.69.5",
        "typescript": "5.3.3"
    },
    "nextBundleAnalysis": {
        "budget": 358400,
        "budgetPercentIncreaseRed": 10,
