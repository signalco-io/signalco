    },
    "devDependencies": {
        "@signalco/tsconfig": "workspace:*",
        "prop-types": "15.8.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rimraf": "5.0.5",
        "tsup": "7.2.0",
        "typescript": "5.2.2"
    },
    "peerDependencies": {
        "react": "18.2.0",
        "react-dom": "18.2.0"
    }
}
