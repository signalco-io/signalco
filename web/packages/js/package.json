{
    "name": "@signalco/js",
    "version": "0.0.0",
    "private": true,
    "sideEffects": false,
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js"
        }
    },
    "type": "module",
    "files": [
        "dist"
